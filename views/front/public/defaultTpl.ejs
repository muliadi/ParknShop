<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%=siteConfig.cmsDescription%>">
    <meta content="<%=siteConfig.keywords%>" name="keywords" />
    <meta name="author" content="x-web">
    <title><%=siteConfig.title%></title>

    <!-- Bootstrap 3.3.2 -->
    <link href="/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <!-- Data Table -->
    <link href="/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- uploadify -->
    <link href="/plugins/uploadify/uploadify.css" rel="stylesheet" type="text/css" />
    <!-- 前台默认样式 -->
    <link href="/stylesheets/front/css/default.css" rel="stylesheet">

    <!-- jQuery 2.1.3 -->
    <script src="/plugins/jQuery/jquery-1.10.2.min.js" type="text/javascript"></script>
    <!-- Angular -->
    <script src="/plugins/angular/angular.min.js"></script>

    <script>
        var App = angular.module("App", []);

        $(function () {
            // Dropdown-auto-expand-collapse
            $("a[data-toggle='dropdown']", "div.top").mouseenter( function () {
                $( this ).siblings( 'ul' ).dropdown('toggle');
            }).mouseleave( function () {
                var a = this;
                $( this ).siblings( 'ul' ).mouseleave( function () {
                    $( this ).dropdown('toggle');
                    var ul = this;
                    $( a ).mouseleave( function () {
                        $( ul ).dropdown('toggle');
                    });
                });
            });
        });
    </script>
</head>

<body ng-app="App">

<!-- BEGIN HEADER -->
<%- include header %>
<!-- END HEADER -->

<!-- BEGIN BODY -->
<%- body %>
<!-- END BODY -->

<!-- BEGIN FOOTER -->
<%- include footer %>
<!-- END FOOTER -->

<!-- SCRIPT -->
<!-- Bootstrap 3.3.2 JS -->
<script src="/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- uploadify -->
<script src="/plugins/uploadify/jquery.uploadify.min.js"></script>
<!-- d3 -->
<script src="/plugins/d3/d3.v3.min.js"></script>
<!--ParknShop-->
<script src="/javascripts/PnP.public.js" type="text/javascript"></script>
<!-- END SCRIPT -->
</body>
</html>
