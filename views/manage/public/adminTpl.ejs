<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= siteInfo.title%></title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.2 -->
    <link href="/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!--数据表格相关样式-->
    <link href="/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="/stylesheets/backstage/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/backstage/css/skins/skin-blue.min.css" rel="stylesheet" type="text/css" />

    <!-- jQuery 2.1.3 -->
    <!--<script src="/javascripts/jQuery-2.1.3.min.js" type="text/javascript"></script>-->
    <script src="/plugins/jQuery/jquery-1.10.2.min.js" type="text/javascript"></script>
    <!--数据绑定-->
    <script src="/plugins/angular/angular.min.js"></script>
    <!--uploadify-->
    <link href="/plugins/uploadify/uploadify.css" rel="stylesheet" type="text/css" />
    <script src="/plugins/uploadify/jquery.uploadify.min.js"></script>

    <script src="/javascripts/PnP-angular.js"></script>
    <link rel="stylesheet" href="/stylesheets/backstage/css/style.css"/>

</head>
<script>
    var App = angular.module("adminApp", []);
</script>
<body class="skin-blue" ng-app="adminApp">

<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">
        <!-- Logo -->
        <a href="/admin/manage" class="logo"><b>PARKnSHOP</b>.com</a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account Menu -->
                    <% if (adminlogined) { %>
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img alt="User Image" class="user-image" src="<%= adminUserInfo.logo %>">
                            <span class="hidden-xs" id="adminUserName"><%= adminUserInfo.username %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-header">
                                <img src="<%=adminUserInfo.logo%>" class="img-circle" alt="User Image" />
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-right">
                                    <a href="/admin/logout" class="btn btn-default btn-flat">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- search form (Optional) -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="searchKey" class="form-control" placeholder="search..." value=""/>
              <span class="input-group-btn">
                <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
                </div>
            </form>
            <!-- /.search form -->

            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li class="header">Main Menu</li>
                <!-- Optionally, you can add icons to the links -->
                <input type="hidden" id="currentCate" value="<%= bigCategory%>"/>
                <li class="treeview active" cid="sysTemManage">
                    <a href="#"><span>System Management</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li cid="sysTemManage_user"><a href="/admin/manage/adminUsersList"><i class="fa fa-user"></i> Administrator Manage</a></li>
                        <li cid="sysTemManage_uGroup"><a href="/admin/manage/adminGroupList"><i class="fa fa-group"></i> Admin Group Manage</a></li>
                        <li cid="sysTemManage_ads"><a href="/admin/manage/adsList"><i class="fa fa-camera-retro"></i> Ads Manage</a></li>
                        <li cid="sysTemManage_files"><a href="/admin/manage/filesList"><i class="fa fa-file-text"></i> Files Manage</a></li>
                        <li cid="sysTemManage_data">
                            <a href="#"><i class="fa fa-cloud"></i> Data Manage<i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="treeview-menu">
                                <li cid="sysTemManage_data_1"><a href="/admin/manage/dataManage/m/backUpData"><i class="fa fa-copy"></i> Backup</a></li>
                            </ul>
                        </li>
                        <li cid="sysTemManage_logs"><a href="/admin/manage/systemLogs"><i class="fa fa-fw fa-clipboard"></i> System Log</a></li>
                    </ul>
                </li>
                <li class="treeview" cid="contentManage">
                    <a href="#"><span>文档管理</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li cid="contentManage_content"><a href="/admin/manage/contentList"><i class="fa fa-file-text-o"></i> 文档管理</a></li>
                        <li cid="contentManage_cateGory"><a href="/admin/manage/contentCategorys"><i class="fa fa-clipboard"></i> 文档类别管理</a></li>
                        <li cid="contentManage_tag"><a href="/admin/manage/contentTags"><i class="fa fa-tags"></i> 文档标签管理</a></li>
                        <li cid="contentManage_temp"><a href="/admin/manage/contentTemps"><i class="fa fa-dashboard"></i> 文档模板配置</a></li>
                        <li cid="contentManage_msg"><a href="/admin/manage/contentMsgs"><i class="fa fa-comments"></i> 留言管理</a></li>
                    </ul>
                </li>
            </ul><!-- /.sidebar-menu -->

        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                <%= siteInfo.title %>
                <small><%= siteInfo.description %></small>
                <p class="text-danger pull-right" style="font-size: 13px;"><span id="error-info"></span></p>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <%-body %><!-- Your Page Content Here -->

        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- Default to the left -->
        <strong>Copyright &copy; 2015 <a href="http://www.html-js.cn" target="_blank"><b>PARKnSHOP</b>.com</a>.</strong> All rights reserved.
    </footer>

</div><!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->


<!-- Bootstrap 3.3.2 JS -->
<script src="/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- 数据表格插件开始 -->
<!--<script src="/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>-->
<!--<script src="/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>-->

<!-- AdminLTE App -->
<script src="/javascripts/backstage/app.min.js" type="text/javascript"></script>



<script>
    $(function(){
        var curerntCate = $("#currentCate").val();
        var cateList = $(".sidebar-menu").find("li");
        var pCateList = $(".sidebar-menu").find(".treeview");
        for (var i = 0; i < cateList.length; i++) {
            var obj = $(cateList[i]);
            if (obj.attr("cid") === curerntCate) {
                obj.addClass("active");
                for (var j = 0; j < pCateList.length; j++){
                    var pobj = $(pCateList[j]);
                    if (pobj.attr("cid").split("_")[0] === obj.attr("cid").split("_")[0]) {
                        pobj.addClass("active").siblings().removeClass("active");
                    }
                }
            }
        }
    })
</script>

</body>
</html>
