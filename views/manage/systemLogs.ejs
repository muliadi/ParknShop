<div class="row" ng-controller="systemLogs">
	<% include public/modal %>
    <div class="col-xs-12">
		<div class="panel clearfix">
			<div class="pull-right">
				<% include public/searchBox %>
			</div>
		</div>
        <div class="box">
            <div class="box-body table-responsive no-padding" >
                <table class="table table-hover">
                    <tr>
                        <th><input type="checkbox" class="mini" id="selectAll"/></th>
                        <th>Type</th>
                        <th>Log</th>
                        <th>Date</th>
                    </tr>
                    <tr class="datalist" ng-repeat="opt in data">
                        <td><input type="checkbox" name="listItem" class="mini" value="{{opt._id}}" ng-click="getNewIds()"/></td>
                        <td>{{opt.type}}</td>
                        <td>{{opt.log}}</td>
                        <td class=" ">{{opt.date | date : "yyyy-MM-dd HH:mm:ss"}}</td>
                    </tr>
                </table>

            </div><!-- /.box-body -->
            <div class="box-footer">
                <!--分页-->
                <% include public/pagination %>
            </div>
            <div class="overlay hide" id="dataLoading">
                <i class="fa fa-refresh fa-spin"></i>
            </div>
        </div><!-- /.box -->

    </div><!-- /.col -->

</div>


<script>

    App.controller( "systemLogs", function ( $scope, $http ) {

		// 初始化名称和权限
        $scope.formData = {};
        //获取日志数据列表
        initPagination( $scope, $http, "<%=bigCategory%>", "<%=searchKey%>" );

    });

</script>
